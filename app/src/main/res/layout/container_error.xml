<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/container_error"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/body_color">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="130dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_404_1"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/titleview_height_half"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="出错了！"
            android:textColor="#7d99a5"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="5dp"
            android:text="您访问的页面在火星！"
            android:textColor="#7d99a5"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_404_stroke_selector"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="再试一次"
            android:textColor="#57bdeb"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_refresh"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/btn_refresh"
            android:background="@drawable/shape_404_stroke_selector"
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:text="返回首页"
            android:textColor="#57bdeb"
            android:textSize="14sp"/>
    </RelativeLayout>

</RelativeLayout>