<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:id="@+id/umeng_comm_content_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false" >

    <!-- Feed内容视图 -->

    <include
        android:id="@+id/umeng_comm_feed_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/umeng_comm_feed_detail_content_layout" />

    <TextView
        android:id="@+id/umeng_comm_like_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/umeng_comm_feed_content_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/umeng_comm_like_white"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="40"
        android:textColor="#66646d"
        android:textSize="14sp" />

    <com.umeng.comm.ui.widgets.LikeView
        android:id="@+id/umeng_comm_like_users_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/umeng_comm_feed_content_layout"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/umeng_comm_like_count_tv"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/umeng_comm_comment_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/umeng_comm_like_count_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="评论(40)" />

    <TextView
        android:id="@+id/umeng_comm_forward_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/umeng_comm_like_count_tv"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="转发(12)"
        android:textColor="#bbbbbb" />

    <include
        android:id="@+id/umeng_comm_devide_line_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/umeng_comm_forward_count_tv"
        android:layout_marginTop="5dp"
        layout="@layout/umeng_comm_divide_line" />

</RelativeLayout>